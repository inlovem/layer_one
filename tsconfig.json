{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Paths & Modules */
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],

    /* Strict Type Checks */
    "strict": true,

    /* Output */
    "outDir": "./dist",
    "skipLibCheck": true
  }
}
